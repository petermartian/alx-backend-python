#!/usr/bin/env bash
# kubctl-0x03: rolling update blue deployment to image v2.0 and probe for downtime.

set -euo pipefail

NS="default"
DEPLOY="messaging-app-blue"
SVC="messaging-app"
PORT=8000
ADDR="127.0.0.1:${PORT}"

need() { command -v "$1" >/dev/null 2>&1 || { echo "âŒ Missing $1"; exit 1; }; }
need kubectl
need curl

echo "ðŸ”Œ Port-forwarding Service '${SVC}' â†’ http://${ADDR} ..."
kubectl port-forward svc/${SVC} -n ${NS} ${PORT}:${PORT} >/tmp/kube_pf.log 2>&1 &
PF_PID=$!

cleanup() {
  echo -e "\nðŸ§¹ Cleaning up..."
  kill ${PF_PID}  >/dev/null 2>&1 || true
  kill ${PROBE_PID:-0} >/dev/null 2>&1 || true
}
trap cleanup EXIT

sleep 2

FAILS=0
TOTAL=0
echo "ðŸ§ª Probing / during rollout (2xx/3xx = OK)â€¦"
(
  while true; do
    CODE=$(curl -s -o /dev/null -w "%{http_code}" "http://${ADDR}/" || echo "000")
    TOTAL=$((TOTAL+1))
    case "$CODE" in
      2*|3*) printf "." ;;
      *)     printf "x"; FAILS=$((FAILS+1)) ;;
    esac
    sleep 0.5
  done
) &
PROBE_PID=$!

echo "ðŸš€ Applying updated deployment (image v2.0)â€¦"
kubectl apply -f messaging_app/blue_deployment.yaml

echo "â³ Monitoring rolloutâ€¦"
if kubectl rollout status deploy/${DEPLOY} -n ${NS} --timeout=300s; then
  echo -e "\nâœ… Rollout complete."
else
  echo -e "\nâš ï¸ Rollout not complete. Showing deploy events:"
  kubectl describe deploy ${DEPLOY} -n ${NS} | sed -n '/Events:/,$p' || true
fi

kill ${PROBE_PID} >/dev/null 2>&1 || true
echo -e "\nðŸ“Š Probe summary: total=${TOTAL}, failures=${FAILS}"

echo "ðŸ“¦ Current pods:"
kubectl get pods -l app=messaging-app -n ${NS} -o wide --show-labels
